form-checkbox-size = 24px
form-font-size = 1.5rem

focus-border()
  transition all 0.6s
  border-color underline-active-color

.default-form-style
  color form-font-color
  font-size form-font-size
  fieldset
    border-style solid
    border-width 1px
    border-color #c1b02a
    border-radius 10px
  legend
    margin-left 1rem
    border-style none
  ul
    padding 0
    margin 0
    li
      height 45px
      list-style none
      margin 0
      padding .5rem
  span
    border-bottom 1px dashed underline-inactive-color
    text-align right
    width 10rem
    margin 0 2rem 0 3rem
    display inline-block
    vertical-align top
  .box-field
    color form-font-color
    font-size form-font-size
    width 100%
    border none
    outline 0
    &:focus + .underline
      focus-border()
  .underline
    display block
    width 100%
    margin 0
    border 1px solid underline-inactive-color
  .group
    display inline-block
    margin .3rem 0 0 0
    label
      display inline-block
      padding-right 2rem
      input
        padding-right 0.5rem
      &:hover
        background #c1b02a
  .component
    width 20rem
    display inline-block
    &-textarea
      height 8rem
  textarea
    color form-font-color
    display block
    font-size form-font-size
    border 1px solid underline-inactive-color
    border-radius 1rem
    box-sizing border-box
    padding 0.5rem
    width 100%
    height 8rem
    outline 0
    &:focus
      transition all 1s
      border 1px solid underline-active-color
  select
    color form-font-color
    font-size form-font-size
    width 100%
    outline 0
  .checkbox
    position relative
    box-sizing border-box
    width form-checkbox-size
    height form-checkbox-size
    content ""
    border 1px solid underline-active-color
    border-radius form-checkbox-size
    vertical-align top
    cursor pointer
    & + label
      vertical-align top
      focus-border()
      cursor pointer
    &:checked
      border-color underline-active-color
      & + label
        focus-border()
      &:after
        display block
        position absolute
        background underline-active-color
        content ""

.form-button-box
  text-align center

.button
  font-size form-font-size
  display inline-block
  padding 0.2rem 1.45rem
  margin 0.1rem
  border 0.15rem solid underline-inactive-color
  box-sizing border-box
  text-decoration none
  color form-font-color
  &:hover
    focus-border()
  &:active
    transition all 0.6s
    background-color underline-active-color

@media screen and (max-width: 768px)
  .default-form-style
    span
      text-align left
      display block
      margin 0 2rem 0 0
    ul li
      height 80px
